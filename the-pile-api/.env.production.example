# Production Environment Variables for The Pile Backend
# Copy this file to .env.production and fill in your values

# Database Configuration (Railway provides these automatically)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://default:password@host:port

# Steam API Configuration
# Get your key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=YOUR_STEAM_API_KEY_HERE

# Security Configuration
# Generate a secure random string (use: openssl rand -hex 32)
JWT_SECRET_KEY=your-very-secure-random-string-here

# CORS Configuration
# Replace with your frontend URL(s) - can be multiple URLs in JSON array format
CORS_ORIGINS=["https://pile.yourdomain.com", "https://yourdomain.com"]

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Optional: Rate Limiting (defaults shown)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Optional: Error Tracking (uncomment if using Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Background Jobs (uncomment when implementing)
# CELERY_BROKER_URL=redis://default:password@host:port/1
# CELERY_RESULT_BACKEND=redis://default:password@host:port/2

# Environment
ENVIRONMENT=production
DEBUG=false