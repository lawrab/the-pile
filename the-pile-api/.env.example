# The Pile Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
# For local development with PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/thepile_dev
# For local development with SQLite (easier for testing):
DATABASE_URL=sqlite:///./test.db

# JWT Configuration
# Generate a secure random string for production (e.g., openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-change-this-in-production

# CORS Origins - List of allowed frontend URLs (JSON array format)
CORS_ORIGINS=["http://localhost:3000"]

# Steam API Configuration
# Get your API key from: https://steamcommunity.com/dev/apikey
# Domain name can be "localhost" for development
STEAM_API_KEY=your_steam_api_key_here

# Redis Configuration (optional for basic testing)
# Comment out if not using Redis locally
REDIS_URL=redis://localhost:6379

# Environment Mode
ENVIRONMENT=development